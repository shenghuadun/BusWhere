<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:adsmogo="http://www.adsmogo.com"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/adContainer"
        android:orientation="vertical" >
	    
        <RelativeLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            
			<EditText
			    android:id="@+id/lineNum"
			    android:layout_width="fill_parent"
			    android:layout_height="48dp"
			    android:ems="10"
			    android:layout_centerHorizontal="true"
			    android:background="@drawable/linenumbk"
			    android:inputType="number" >
		
			</EditText>

			<ImageView
			    android:id="@+id/btnSearch"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:visibility="invisible"
			    android:src="@drawable/abs__ic_search" />
            
		</RelativeLayout>
	    
		<RelativeLayout 
		    android:id="@+id/container"
		    android:layout_marginTop="5dp"
		    android:layout_below="@id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
		    
	        <LinearLayout
	            android:id="@+id/tableRow0"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp" >
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/tableRow1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_below="@id/tableRow0"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp" >
	        </LinearLayout>
	
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_below="@id/tableRow1"
	             android:orientation="horizontal">
	            <com.greenidea.buswhere.ui.SlideToDeleteListView
	                android:id="@+id/listView"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="10dp"
	                android:fadingEdge="none"
	                android:focusableInTouchMode="true"
	                android:scrollbarStyle="outsideOverlay" >
	            </com.greenidea.buswhere.ui.SlideToDeleteListView>
	        </LinearLayout>
		</RelativeLayout>
		
	    <ListView 
	        android:id="@+id/hintList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_alignTop="@id/container">
	    </ListView>
	</RelativeLayout>
    
	<!-- 显示广告的Layout -->
	<LinearLayout
	    android:id="@id/adContainer"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"/>
	
    <FrameLayout
	    android:id="@+id/content_frame"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
    </FrameLayout>
    
</RelativeLayout>