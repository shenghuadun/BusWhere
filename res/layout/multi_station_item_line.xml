<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/lineName"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="世园专线7路"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
	    
	    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/lineName"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    
	        <TextView
	            android:id="@+id/num1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:textSize="18sp"
				android:textColor="@color/num"	            
	            android:text="28" />
	        
		    <TextView
		        android:id="@+id/zhan1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/num1"
		        android:text="站" />
	        
		    <TextView
		        android:id="@+id/time1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_toRightOf="@id/zhan1"
	            android:textSize="18sp"
				android:textColor="@color/time"	  
		        android:text="time" />
		    
	        <TextView
	            android:id="@+id/text1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/time1"
	            android:text="前到达" />
	        
	        <TextView
	            android:id="@+id/station1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/text1"
	            android:textSize="18sp"
				android:textColor="@color/station"	  
	            android:text="五四广场" />
	        
	    </RelativeLayout>
	    
        <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    
	        <TextView
	            android:id="@+id/num2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="28" />
	        
		    <TextView
		        android:id="@+id/zhan2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/num2"
		        android:text="站" />
	        
		    <TextView
		        android:id="@+id/time2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_toRightOf="@id/zhan2"
		        android:text="time" />
		    
	        <TextView
	            android:id="@+id/text2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/time2"
	            android:text="前到达" />
	        
	        <TextView
	            android:id="@+id/station2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/text2"
	            android:text="五四广场" />
	        
	        
	    </RelativeLayout>
    </LinearLayout>

    <ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/separator"/>
</RelativeLayout>
